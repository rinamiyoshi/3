
<%= flash[:notice] %>

<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>title</th>
   <th>body</th>
   <th></th>
  </tr>
 </thead>

 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td>
    <%= book.title %>
   </td>
   <td>
    <%= book.body %>
   </td>
   <td>
    <%= link_to "show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
   </td>
  </tr>
  <% end %>
 </tbody>
</table>



<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

 <h4>title</h4>
 <%= f.text_field :title %>
 <h4>body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>


